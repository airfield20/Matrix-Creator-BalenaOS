/dts-v1/ ;
/plugin/ ;

/ {
	compatible = "brcm,bcm2835", "brcm,bcm2708", "brcm,bcm2709";

	fragment@0 {
		target = <&spidev0>;
		__overlay__ { status = "disabled"; };
	};

	fragment@1 {
		target = <&spi0>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay"; 
			matrixio_core_0: matrixio_core@0 {
				compatible = "matrixio-core";
				spi-max-frequency = <15000000>;
				spi-cs-high = <1>;
				reg = <0>;
			};
		};
	};


	fragment@2 {
		target = <&gpio>;
		__overlay__ {
			matrixio_pins: matrixio_pins {
				brcm,pins = <5 6>;
				brcm,function = <0 0>;
			};
		};
	};


        fragment@3 {
                target-path = "/";
                __overlay__ {
                        matrixio-everloop@0 {
                                compatible = "matrixio-everloop";

                        };
                };
        };

        fragment@4 {
                target = <&matrixio_core_0>;
                __overlay__ {
                        matrixio-uart@0 {
                                compatible = "matrixio-uart";
				interrupts = <5 1>; /* low-to-high edge triggered */
				interrupt-parent = <&gpio>;
				status = "okay";
                        };
                };
        };

        fragment@5 {
                target = <&matrixio_core_0>;
                __overlay__ {
                        matrixio-gpio@0 {
                                compatible = "matrixio-gpio";
                                status = "okay";
                        };
                };
        };

        fragment@6 {
                target = <&matrixio_core_0>;
                __overlay__ {
                        matrixio-pwm@0 {
                                compatible = "matrixio-pwm";
                                status = "okay";
                        };
                };
        };

	fragment@7 {
		target = <&matrixio_core_0>;
		__overlay__ {
			matrixio-env@0 {
				compatible = "matrixio-env";
				status = "okay";
			};
		};
	};
	fragment@8 {
		target = <&matrixio_core_0>;
		__overlay__ {
			matrixio-imu@0 {
				compatible = "matrixio-imu";
				status = "okay";
			};
		};
	};

        fragment@9 {
                target = <&matrixio_core_0>;
                __overlay__ {
                        matrix-mic@0 {
                                compatible = "matrixio-mic";
                                interrupts = <6 0x3>; /* both edges triggered */
                                interrupt-parent = <&gpio>;
                        };
                };
        };
        fragment@10 {
                target = <&matrixio_core_0>;
                __overlay__ {
                        matrix-playback@0 {
                                compatible = "matrixio-playback";
                        };
                };
        };
        fragment@11 {
                target = <&matrixio_core_0>;
                __overlay__ {
                        matrix-codec@0 {
                                compatible = "matrixio-codec";
                        };
                };
        };

        fragment@12 {
                target-path = "/";
                __overlay__ {
                        matrixio-regmap@0 {
                                compatible = "matrixio-regmap";

                        };
                };
        };
};

